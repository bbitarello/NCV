#All Fwqs and Pops


mergeBed -i <(sort -V -k1,1 -k2,2 <(cat YRI.union.ALLfeqs.top816 LWK.union.ALLfeqs.top816 GBR.union.ALLfeqs.top816 TSI.union.ALLfeqs.top816)) > AllPops.AllFeqs.top816.union.bed

